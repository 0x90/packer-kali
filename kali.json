{
  "builders": [
    {
      "type": "virtualbox-iso",
        "boot_command": [
          "<esc><wait>",
          "install ", 
	  "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
	  "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
          "netcfg/get_hostname={{ .Name }} ",
	  "netcfg/get_domain=vagrantup.com ",
	  "fb=false debconf/frontend=noninteractive ",
	  "console-setup/ask_detect=false <wait>", 
  	  "console-keymaps-at/keymap=us ",
	  "keyboard-configuration/xkb-keymap=us <wait>",
          "<enter><wait10><wait10><wait10>",
          "<enter><wait>"
        ],
      "boot_wait": "10s",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "iso_checksum": "6deb789fa05d84cd335d5afb86983119784dd978",
      "iso_checksum_type": "sha1",
      "iso_url": "http://cdimage.kali.org/kali-images/kali-1.0.7/kali-linux-1.0.7-amd64.iso",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -h 0",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "vboxmanage": [
	["modifyvm", "{{.Name}}", "--nic2", "intnet"],
	["modifyvm", "{{.Name}}", "--macaddress2", "080027f34a5d"]
      ]
    },
    {
      "type": "vmware-iso",
	"boot_command": [
	  "<esc><esc><enter><wait>",
	  "/install/vmlinuz noapic ",
	  "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
	  "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
	  "netcfg/get_hostname={{ .Name }} ",
	  "netcfg/get_domain=vagrantup.com ",
	  "fb=false debconf/frontend=noninteractive ",
	  "console-setup/ask_detect=false <wait>", 
	  "console-keymaps-at/keymap=us ",
	  "keyboard-configuration/xkb-keymap=us <wait>",
	  "initrd=/install/initrd.gz -- <enter>"
	],
      "boot_wait": "10s",
      "guest_os_type": "debian7-64",
      "http_directory": "http",
      "iso_url": "http://cdimage.kali.org/kali-images/kali-1.0.7/kali-linux-1.0.7-amd64.iso",
      "iso_checksum": "6deb789fa05d84cd335d5afb86983119784dd978",
      "iso_checksum_type": "sha1",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -h 0"
  }
  ],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "10s",
      "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'",
      "scripts": [
        "scripts/base.sh",
        "scripts/vmtools.sh",
	"scripts/vagrant.sh",
	"scripts/ruby.sh",
	"scripts/chef.sh",
	"scripts/network.sh"
      ]
    },
    {
      "type": "file",
      "source": "assets/apache.tar.gz",
      "destination": "/tmp/apache.tar.gz"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'",
      "scripts": [
        "scripts/apache.sh",
        "scripts/cleanup.sh",
	"scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [  
    {
      "type": "vagrant",
	"output" : "Kali_{{.Provider}}_{{isotime}}.box"
    }
  ]
}
